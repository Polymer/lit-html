{
  "name": "lit-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "benchmarks": "cd packages/benchmarks && npm run benchmarks",
    "bootstrap": "lerna bootstrap --ci",
    "build": "lerna run build",
    "build:ts": "lerna run build:ts",
    "clean": "lerna run clean",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint \"**/*.{js,ts}\" --fix",
    "format:prettier": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --write",
    "ignore-sync": "ignore-sync .",
    "lint": "eslint \"**/*.{js,ts}\"",
    "nuke": "rm -rf node_modules && npm install && lerna exec 'rm -rf node_modules' && lerna bootstrap && npm run clean",
    "upgrade": "rm -rf node_modules package-lock.json && npm install && lerna exec 'rm -rf node_modules package-lock.json' && lerna bootstrap && npm run clean",
    "test": "(cd packages/tests && npm test) && (cd packages/labs/ssr && npm test) && (cd packages/localize && npm test) && (cd packages/localize-tools && npm test) && (cd packages/lit-starter-ts && npm test) && (cd packages/lit-starter-js && npm test)",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-virtual": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "as-table": "^1.0.55",
    "babel-eslint": "^10.1.0",
    "chalk": "^4.1.1",
    "eslint": "^7.27.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "husky": "^6.0.0",
    "ignore-sync": "^4.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "**/*.{cjs,html,js,json,md,ts}": "prettier --write",
    "**/*.{js,ts}": "eslint --fix"
  }
}
